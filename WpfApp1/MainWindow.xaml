<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFBBD3E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="267*"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center">Вывод данных</Label>
        <DataGrid x:Name="db_grid" Grid.Row="1" Grid.Column="0" IsReadOnly="True"></DataGrid>
        <Button x:Name="edit_b" Grid.Row="2" Grid.Column="0" Content="Изменить" FontSize="36" Click="edit_b_Click"></Button>
    
    </Grid>
</Window>
